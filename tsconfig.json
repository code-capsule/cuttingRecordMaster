{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@typings/*": ["src/typings/*"],
      "@addon/*": ["src/addon/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@main/*": ["src/main/*"],
      "@render/*": ["src/render/*"],
      "@static/*": ["src/static/*"]
    }
  },
  "include": ["src/**/*", "src/common/**/*", "src/**/*.ts", "src/**/*.tsx", "src/types/*.d.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
